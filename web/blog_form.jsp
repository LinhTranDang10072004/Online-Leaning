    <main>
        <section class="form-area section-padding40">
            <div class="container">
                <div class="form-container">
                    <h2><%= request.getParameter("action") != null && request.getParameter("action").equals("update") ? "Update Blog" : "Create New Blog" %></h2>
                    <form action="#" method="POST"> <!-- Placeholder action, to be replaced with servlet -->
                        <input type="hidden" name="action" value="<%= request.getParameter("action") != null ? request.getParameter("action") : "create" %>">
                        <input type="hidden" name="blogId" value="<%= request.getParameter("blogId") != null ? request.getParameter("blogId") : "" %>">
                        
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" name="title" value="<%= request.getParameter("action") != null && request.getParameter("action").equals("update") ? "Sample Blog Title" : "" %>" required>
                        </div>
                        <div class="form-group">
                            <label for="content">Content</label>
                            <textarea class="form-control" id="content" name="content" rows="5" required><%= request.getParameter("action") != null && request.getParameter("action").equals("update") ? "Sample content here..." : "" %></textarea>
                        </div>
                        <div class="form-group">
                            <label for="thumbnail_url">Thumbnail URL</label>
                            <input type="text" class="form-control" id="thumbnail_url" name="thumbnail_url" value="<%= request.getParameter("action") != null && request.getParameter("action").equals("update") ? "" : "" %>">
                        </div>
                        <div class="form-group">
                            <label for="related_topic">Related Topic (Optional)</label>
                            <select class="form-control" id="related_topic" name="related_topic">
                                <option value="">None</option>
                                <option value="1" <%= request.getParameter("action") != null && request.getParameter("action").equals("update") && "1".equals(request.getParameter("related_topic")) ? "selected" : "" %>>Web Programming</option>
                                <option value="2" <%= request.getParameter("action") != null && request.getParameter("action").equals("update") && "2".equals(request.getParameter("related_topic")) ? "selected" : "" %>>Java Development</option>
                                <option value="3" <%= request.getParameter("action") != null && request.getParameter("action").equals("update") && "3".equals(request.getParameter("related_topic")) ? "selected" : "" %>>Database Management</option>
                            </select>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary"><%= request.getParameter("action") != null && request.getParameter("action").equals("update") ? "Update Blog" : "Create Blog" %></button>
                            <a href="seller.jsp" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
   
